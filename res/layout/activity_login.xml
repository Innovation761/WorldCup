<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/football"
    tools:ignore="HardcodedText,Autofill,TextFields,SpUsage"
    tools:context="com.ss.video.rtc.demo.quickstart.LoginActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"/>


    <EditText
        android:id="@+id/room_id_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="15dp"
        android:drawableStart="@drawable/custom_house_icon"
        android:background="@drawable/my_edit"
        android:hint="请输入房间名"
        android:textColorHighlight="@color/white"
         />

    <EditText
        android:id="@+id/user_id_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_edit"
        android:drawableStart="@drawable/custom_person_icon"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:hint="请输入用户名"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/join_room_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="20dp"
        android:background="#1155A8"
        android:text="加入房间"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/version_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="10sp" />


</LinearLayout>